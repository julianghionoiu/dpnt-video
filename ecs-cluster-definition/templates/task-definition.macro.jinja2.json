{% macro languageSpecificTask(language, version) -%}
{
  "Type": "AWS::ECS::TaskDefinition",
  "Properties": {
    "Cpu": 1024,
    "RequiresCompatibilities": [
      "FARGATE"
    ],
    "Family": "{{ CLUSTER_NAME }}-{{ language }}",
    "NetworkMode": "awsvpc",
    "ExecutionRoleArn": "arn:aws:iam::577770582757:role/ecsTaskExecutionRole",
    "TaskRoleArn": {
      "Ref": "TaskRole"
    },
    "Memory": 2048,
    "ContainerDefinitions": [
      {
        "Name": "default-container",
        "Essential": true,
        "Image": "{{ ECR_BASE_URL }}/accelerate-io/dpnt-video-{{ language }}:{{ version }}",
        "Environment": [
          {
            "Name": "S3_ENDPOINT",
            "Value": "{{ S3_ENDPOINT }}"
          },
          {
            "Name": "S3_REGION",
            "Value": "{{ S3_REGION }}"
          },
          {
            "Name": "SQS_ENDPOINT",
            "Value": "{{ SQS_ENDPOINT }}"
          },
          {
            "Name": "SQS_REGION",
            "Value": "{{ SQS_REGION }}"
          },
          {
            "Name": "SQS_QUEUE_URL",
            "Value": "{{ SQS_QUEUE_URL }}"
          }
        ],
        "LogConfiguration": {
          "LogDriver": "awslogs",
          "Options": {
            "awslogs-region": {
              "Ref": "AWS::Region"
            },
            "awslogs-group": {
              "Ref": "ClusterTaskExecutionLogGroup"
            },
            "awslogs-stream-prefix": "{{ CLUSTER_NAME }}-{{ language }}"
          }
        }
      }
    ]
  }
}
{%- endmacro %}
